@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Add</button>
<br/>
<br/>
<button class="btn btn-primary" @onclick="DecreaseCount">Subtract</button>

@code {
    <!-- define the variable currentCount -->
    private int currentCount = 0;

    <!-- define the function IncrementCount -->
    private void IncrementCount()
    {
        currentCount++;
    }
    <!-- define the function DecreaseCount -->
        private void DecreaseCount()
    {
        currentCount--;
    }
}
